<h1>Follower Users</h1>
<% if @user.follower_user.present? %>
  <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @user.follower_user.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user , :profile_image, size: "40x40", fallback: "no_image.jpg" %></td>
              <td><%= user.name %></td>
              <td>
                <%= "フォロー数：#{user.follower.count}" %>
              </td>
              <td>
                <%= "フォロワー数：#{user.followed.count}" %>
              </td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
<%else%>
  <p>ユーザーはいません</p>
<%end%>